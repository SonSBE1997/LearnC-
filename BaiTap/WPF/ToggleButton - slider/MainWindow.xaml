<Window x:Class="ToggleButton___slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleButton___slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Left" Value="50" Maximum="100" Margin="111,104,0,0" VerticalAlignment="Top" Height="51" Width="270"/>
        <ToggleButton x:Name="tbtn" Content ="click" FontSize="30" VerticalAlignment="Top" Height="50"></ToggleButton>
    </Grid>
</Window>
